---
import { getCollection } from 'astro:content';
import FileTree from '../components/FileTree.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const allPosts = await getCollection('posts');

const fileTree = {};

for (const post of allPosts) {
    const parts = post.slug.split('/');
    let currentLevel = fileTree;
    for (let i = 0; i < parts.length - 1; i++) {
        const part = parts[i];
        if (!currentLevel[part]) {
            currentLevel[part] = {};
        }
        currentLevel = currentLevel[part];
    }
    if (!currentLevel.__files__) {
        currentLevel.__files__ = [];
    }
    currentLevel.__files__.push(post);
}

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A simple, modern blog." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="page-container">
			<div class="main-content-grid">
				<aside class="sidebar">
					<nav>
                        <h3><a href="/">Earl Atnip's Place</a></h3>
						<FileTree tree={fileTree} currentPath={currentPath} />
					</nav>
				</aside>
				<main>
					<slot />
				</main>
			</div>
			<footer>
				<p>&copy; {new Date().getFullYear()} Earl Atnip's Place. All rights reserved.</p>
			</footer>
		</div>
	</body>
</html>

<style is:global>
	body {
		font-family: sans-serif;
		background-color: #f0f0f0;
		color: #333;
		margin: 0;
		padding: 0;
	}

	.page-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.main-content-grid {
		display: grid;
		grid-template-columns: 240px 1fr;
		flex-grow: 1;
	}

	main {
		background-color: #fff;
		padding: 2rem;
	}

	.sidebar {
		background-color: #f0f0f0;
		padding: 1.5rem;
	}

	.sidebar nav h3 {
		margin: 0 0 1rem 0;
		font-size: 1.2rem;
	}

	.sidebar nav > ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.sidebar nav ul li a {
		display: block;
		padding: 0.3rem 0.5rem;
		text-decoration: none;
		color: #333;
		border-radius: 4px;
	}

	.sidebar nav ul li a:hover {
		background-color: #e0e0e0;
	}

	.sidebar nav ul li a.is-active {
		background-color: #333;
		color: white;
		font-weight: 600;
	}

	footer {
		text-align: center;
		padding: 1.5rem 2rem;
		color: #888;
		font-size: 0.9rem;
	}

	a {
		color: #333;
		text-decoration: underline;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 600;
	}

	@media (max-width: 900px) {
		.main-content-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
